<h1>Tweets</h1>
<br>
<% @posts.each do |post| %>

  <div class="post">
	<div class="left-column">
		<h2><%= post.creator %></h2>
		<p><%= post.created_at %></p>
	</div>
	<div class="right-column">
		<p><%= post.content %></p>
		<br>
		<%= link_to 'Show', post %>
	    <%= link_to 'Edit', edit_post_path(post) %>
	    <%= link_to 'Destroy', post, :method => :delete %>
	</div>
  </div>
  <br>
  <br>
<% end %>


